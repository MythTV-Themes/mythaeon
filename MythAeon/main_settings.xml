<?xml version="1.0" encoding="UTF-8" ?>
<mythmenu name="SETUP">

    <button>
        <type>SETTINGS_SETUPWIZARD</type>
        <text>Wizard</text>
        <description>Basic configuration wizard</description>
        <action>SETTINGS SETUPWIZARD</action>
    </button>

    <button>
        <type>SETUP_MENU</type>
        <text>Core Setup</text>
        <description>Configure system settings</description>
        <action>SETTINGS MAINGENERAL</action>
    </button>

    <button>
        <type>SETTINGS_APPEARANCE</type>
        <text>Looks</text>
        <description>Configure mythtv look and feel</description>
        <action>SETTINGS APPEARANCE</action>
    </button>

    <button>
        <type>SETTINGS_THEMECHOOSER</type>
        <text>Skins</text>
        <description>Select your theme</description>
        <action>SETTINGS THEMECHOOSER</action>
    </button>

    <button>
        <type>SCREENSETUPWIZARD</type>
        <text>Screen</text>
        <description>Screen setup</description>
        <action>SCREENSETUPWIZARD</action>
    </button>

    <button>
        <type>SETTINGS_TV</type>
        <text>TV Setup</text>
        <description>Configure playback and TV settings</description>
        <action>MENU tv_settings.xml</action>
    </button>

    <button>
        <type>SETTINGS_AUDIOGENERAL</type>
        <text>Audio Setup</text>
        <description>Configure audio settings</description>
        <action>SETTINGS AUDIOGENERAL</action>
    </button>

    <button>
        <type>SETTINGS_MEDIA</type>
        <text>Media Setup</text>
        <description>Configure media plugins</description>
        <action>MENU media_settings.xml</action>
        <depends>mythvideo mythmusic mythgallery mythfm mythgame mythburn mytharchive</depends>
    </button>

    <button>
        <type>SETTINGS_INFO_CENTER</type>
        <text>Info Setup</text>
        <description>Configure information plugins</description>
        <action>MENU info_settings.xml</action>
        <depends>mythnews mythweather mythbookmarkmanager mythrecipe mythbrowser mythmovies</depends>
    </button>

    <button>
        <type>SETTINGS_ZONEMINDER</type>
        <text>Zoneminder</text>
        <description>Configure</description>
        <action>CONFIGPLUGIN mythzoneminder</action>
        <depends>mythzoneminder</depends>
    </button>

    <button>
        <type>SETUP_KEYS</type>
        <text>Keys</text>
        <description>Configure Mythtv key bindings</description>
        <action>SETUP_KEYS</action>
    </button>

    <button>
        <type>SETTINGS_GRABBERS</type>
        <text>MetaData</text>
        <description>Sources for metadata grabbers</description>
        <action>SETTINGS GRABBERS</action>
    </button>

    <button>
        <type>SETTINGS_SYSTEM_EVENTS</type>
        <text>Handlers</text>
        <description>Setup System event handlers</description>
        <action>SYSTEM_EVENTS</action>
    </button>

</mythmenu>

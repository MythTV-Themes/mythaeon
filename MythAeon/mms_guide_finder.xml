<?xml version="1.0" encoding="UTF-8" ?>
<mythmenu name="SCHEDULE">

    <button>
        <type>TV_PROGRAM_GUIDE</type>
        <text>Guide</text>
        <description>Look at the TV Guide</description>
        <action>TV_SCHEDULE</action>
    </button>

    <button>
        <type>TV_PROGFIND</type>
        <text>Alphabet</text>
        <description>Search programs with alphabetical sorted list</description>
        <action>TV_PROGFIND</action>
    </button>

    <button>
        <type>TV_SEARCH_WORDS</type>
        <text>Words</text>
        <description>Search programs using words</description>
        <action>MENU tv_search.xml</action>
    </button>

    <button>
        <type>TV_SEARCH_LISTS</type>
        <text>Lists</text>
        <description>Search programs using sorted lists</description>
        <action>MENU tv_lists.xml</action>
    </button>

    <button>
        <type>TV_MANUAL_SCHEDULE</type>
        <text>Manual</text>
        <description>Manually Schedule programs</description>
        <action>TV_MANUALSCHEDULE</action>
    </button>

</mythmenu>

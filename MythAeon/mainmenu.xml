<?xml version="1.0" encoding="UTF-8" ?>
<mythmenu name="MAIN">

    <button>
        <type>TV_WATCH_TV</type>
        <text>Television</text>
        <action>TV_WATCH_LIVE</action>
    </button>

    <button>
        <type>TV_WATCH_RECORDINGS</type>
        <text>TV Shows</text>
        <description>Play any of your recorded programs</description>
        <action>TV_WATCH_RECORDING</action>
    </button>

    <button>
        <type>VIDEO_BROWSER</type>
        <text>Movies</text>
        <description>Browse your movie</description>
        <action>JUMP Video Default</action>
    </button>

    <button>
        <type>MUSIC_PLAY</type>
        <text>Music</text>
        <description>Browse your music library</description>
        <action>JUMP Play music</action>
        <depends>mythmusic</depends>
    </button>

    <button>
        <type>MENU_OPTICAL_DISKS</type>
        <text>Disks</text>
        <description>Play or import Blu-ray, DVD, and CDs</description>
        <action>MENU optical_menu.xml</action>
    </button>

    <button>
        <type>IMAGES</type>
        <text>Pictures</text>
        <description>browse your Pictures library</description>
        <action>PLUGIN mythgallery</action>
        <depends>mythgallery</depends>
    </button>

    <button>
        <type>GAME</type>
        <text>Games</text>
        <description>Browse your video games library</description>
        <action>PLUGIN mythgame</action>
        <depends>mythgame</depends>
    </button>

    <button>
        <type>WEATHER</type>
        <text>Weather</text>
        <action>PLUGIN mythweather</action>
        <depends>mythweather</depends>
    </button>

    <button>
        <type>WEBPAGE</type>
        <text>Internet</text>
        <description>Search or browse popular video sites</description>
        <action>MENU mms_web.xml</action>
        <depends>mythbrowser</depends>
    </button>

    <button>
        <type>SETTINGS_GENERAL</type>
        <text>Extras</text>
        <description>Information about your System</description>
        <action>MENU mms_settings.xml</action>
    </button>

    <button>
        <type>SETUP_MENU</type>
        <text>Setup</text>
        <action>MENU main_settings.xml</action>
        <password>SetupPinCode</password>
    </button>

    <button>
        <type>TV_SCHEDULE_RECORDINGS</type>
        <text>TV Guide</text>
        <description>Pick programs to be recorded</description>
        <action>MENU mms_guide.xml</action>
    </button>

</mythmenu>

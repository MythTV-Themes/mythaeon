	            <area>0,0,1694,846</area>
	            <filename>images/shared/multiplex_back.png</filename>
	        </imagetype>
	        
	        <imagetype name="multiplextabletimg" from="multiplextabletbgdimg">
	            <filename>images/shared/multiplex_tablet_nolines.png</filename>
	        </imagetype>

	        <buttonlist name="images" from="buttonlist_wall_gallery">
	            <position>52,30</position>
	        </buttonlist>

	     </group>   

        <group name="multiplextabletmoviewallgroup">
           <area>0,670,1920,410</area>

	        <animation trigger="AboutToShow">
	            <section duration="1200" centre="middle">
	                <position start="1920,670" end="0,670" easingcurve="InOutBack" />
	            </section>
	        </animation>


<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="news">

        <imagetype name="fanart">
            <area>0,0,1920,1080</area>
            <filename>images/backgrounds/news/</filename>
        </imagetype>
        
        <imagetype name="listfloorimg" from="fanart">
            <area>0,473,1920,607</area>
            <filename>images/shared/list_floor.png</filename>
        </imagetype>
        
        <imagetype name="listfilterimg" from="fanart">
            <filename>images/shared/list_filter.png</filename>
        </imagetype>
        
        <imagetype name="spotlightimg" from="fanart">
            <area>0,875,1920,205</area>
            <filename>images/shared/list_spot.png</filename>
        </imagetype>
        
        <group name="date_clock" from="defaultclockup">
            <position>1240,0</position>
        </group>

        <group name="listpanel">
           <area>88,110,1139,970</area>
           
	        <animation trigger="AboutToShow">
	            <section duration="1200" centre="middle">
	                <position start="88,-1080" end="88,110" easingcurve="InOutBack" />
	            </section>
	        </animation>

	        <imagetype name="listpanelbgdblack">
	            <area>0,0,1139,970</area>
	            <filename>images/shared/listpanel_black.png</filename>
               <preserveaspect>no</preserveaspect>
	        </imagetype>

	        <imagetype name="listpanelbgd" from="listpanelbgdblack">
	            <filename>images/shared/listpanel_back.png</filename>
	        </imagetype>
        
	        <imagetype name="listpaneldetailbgd">
	            <area>912,12,148,850</area>
	            <filename>images/shared/listpanel_detailwide.png</filename>
	        </imagetype>
        
           <buttonlist name="siteslist" from="buttonlist_news_sites">
               <position>12,50</position>
           </buttonlist>
           
           <buttonlist name="articleslist" from="buttonlist_news_articles">
               <position>12,50</position>
           </buttonlist>
           
           <textarea name="updated" from="textarea_label_list">
               <area>62,860,800,30</area>
           </textarea>

<!-- Fix me: This does not work when a movie has played and one returns to the main screen

	        <animation trigger="AboutToHide">
	            <section duration="1200" centre="middle">
	                <position start="88,110" end="88,-1080" easingcurve="OutInBack" />
	            </section>
	        </animation>       
-->
        </group>
        
        <group name="listinfo">
           <area>1264,150,545,930</area>

	        <animation trigger="AboutToShow">
	            <section duration="1200" centre="middle">
	                <position start="1920,150" end="1264,150" easingcurve="InOutBack" />
	            </section>
	        </animation>
	
	        <imagetype name="TVShowsframe">
	            <area>-2,245,548,549</area>
	            <filename>images/shared/list_musicicon_frame.png</filename>
	            <preserveaspect>no</preserveaspect>
	        </imagetype>
	     
	        <imagetype name="defaulticon">
	            <area>13,260,518,519</area>
	            <mask>images/shared/list_musicicon_mask.png</mask>
	            <filename>images/shared/DefaultNetwork.png</filename>
	            <preserveaspect>no</preserveaspect>
	        </imagetype>
		
	        <imagetype name="thumbnail" from="defaulticon"/>
		
		     <shape name="descriptionbox" depends="description">
		         <area>13,260,518,519</area>
		         <type>roundbox</type>
		         <cornerradius>15</cornerradius>
		         <fill color="#323232" alpha="210" />
		     </shape>
	
	        <textarea name="title" from="textarea_settings_button">
	            <area>40,287,475,32</area>
	            <multiline>no</multiline>
	            <cutdown>no</cutdown>
	            <scroll direction="horizontal"/>
	        </textarea>
	       
	        <textarea name="description" from="textarea_plot">
	            <area>40,325,475,440</area>
	            <multiline>yes</multiline>
	            <cutdown>yes</cutdown>
	            <template>%DESCRIPTION%</template>
	        </textarea>
	       
	        <textarea name="nosites" from="description">
	        </textarea>
	
	        <textarea name="nodescription" from="description" depends="!description">
	            <value>No description available.</value>
	        </textarea>
	       
	        <imagetype name="TVShowsglass">
	            <area>13,260,518,519</area>
	            <filename>images/shared/list_musicicon_glass.png</filename>
	            <preserveaspect>no</preserveaspect>
	        </imagetype>
	        
           <imagetype name="download_bgd">
	             <filename>images/icons/download_black.png</filename>
	             <alpha>92</alpha>
	             <area>176,810,40,40</area>
	         </imagetype>
	         
	         <imagetype name="enclosures_bgd" from="download_bgd">
	             <filename>images/icons/enclosure_black.png</filename>
	             <position>246,810</position>
	         </imagetype>
	         
	         <imagetype name="ispodcast_bgd" from="download_bgd">
	             <filename>images/icons/podcast_black.png</filename>
	             <position>316,810</position>
	         </imagetype>
	         
	         <imagetype name="download" from="download_bgd">
	             <alpha>255</alpha>
	         </imagetype>
	         
	         <imagetype name="enclosures" from="enclosures_bgd">
	             <alpha>255</alpha>
	         </imagetype>

	         <imagetype name="ispodcast" from="ispodcast_bgd">
	             <alpha>255</alpha>
	         </imagetype>

<!-- Fix me: This does not work when a movie has played and one returns to the main screen

	        <animation trigger="AboutToHide">
	            <section duration="1200" centre="middle">
	                <position start="1264,150" end="-1920,150" easingcurve="OutInBack" />
	            </section>
	        </animation>       
-->
        </group>
        
    </window>

    <window name="editor">

         <area>-1,-1,1850,1010</area>

	     <animation trigger="AboutToShow">
	        <section duration="1000" centre="middle">
	            <alpha start="0" end="255" easingcurve="InQuad" />
	        </section>
	     </animation>
	     
        <group name="settings_panel_bgd" from="basesettingswindow">
           <area>0,0,1850,1010</area>
        </group>

        <group name="editor_panel">
           <area>354,28,1460,952</area>
	
	        <textarea name="title" from="textarea_settings_title">
	            <area>20,50,1360,50</area>
	        </textarea>
	
	        <!-- Labels -->
	        <textarea name="namelabel" from="textarea_settings_option">
	            <position>20,120</position>
	            <value>RSS feed name:</value>
	        </textarea>
	
	        <textarea name="urllabel" from="textarea_settings_option">
	            <position>20,192</position>
	            <value>RSS URL:</value>
	        </textarea>
	
	        <textarea name="iconlabel" from="textarea_settings_option">
	            <position>20,264</position>
	            <value>RSS Icon:</value>
	        </textarea>
	
	        <textarea name="podcastlabel" from="textarea_settings_option">
	            <position>20,336</position>
	            <value>RSS feed is podcast:</value>
	        </textarea>
		        
	        <!-- widgets -->
	        <textedit name="name" from="textedit_settings">
	            <position>0,120</position>
	        </textedit>
	
	        <textedit name="url" from="textedit_settings">
	            <position>0,192</position>
	        </textedit>
	
	        <textedit name="icon"  from="textedit_settings">
	            <position>0,264</position>
	        </textedit>
	
	        <checkbox name="podcast_check" from="checkbox_settings">
	            <position>0,336</position>
	        </checkbox>
	
	        <textarea name="helptext" from="textarea_plot">
	            <area>20,860,1375,72</area>
	            <case>normal</case>
	            <align>bottom,left</align>
	            <multiline>yes</multiline>
	        </textarea>

        </group>

        <group name="editor_menu">
           <area>30,28,324,952</area>

	        <textarea name="title" from="textarea_settings_title">
	            <area>30,50,284,50</area>
	            <value>RSS Editor</value>
	        </textarea>
	
	        <button name="ok" from="button_settings">
	            <position>0,120</position>
	            <value>Save</value>
	        </button>
	
	        <button name="cancel" from="button_settings">
	            <position>0,192</position>
	            <value>Cancel</value>
	        </button>
	
        </group>

	     <animation trigger="AboutToHide">
	        <section duration="1000" centre="middle">
	            <alpha start="255" end="0" easingcurve="InQuad" />
	        </section>
	     </animation>

    </window>

    <window name="config">

        <area>-1,-1,1850,1010</area>

	     <animation trigger="AboutToShow">
	        <section duration="1000" centre="middle">
	            <alpha start="0" end="255" easingcurve="InQuad" />
	        </section>
	     </animation>
	     
        <group name="settings_panel_bgd" from="basesettingswindow_detail">
	        <area>0,0,1850,1010</area>
        </group>
	        	        
        <group name="config_panel">
           <area>414,28,1400,952</area>

	        <textarea name="siteslbl" from="textarea_settings_title">
	            <area>20,50,1315,50</area>
	            <align>left,vcenter</align>
	            <scroll direction="horizontal" />
	            <value>Choose sites you want to receive news from</value>
	        </textarea>
	        	
	        <!-- Labels -->
<!--	        
	        <textarea name="titlelabel" from="textarea_settings_option">
	            <position>20,120</position>
	            <value>Title (Optional):</value>
	        </textarea>
-->
	
	        <!-- widgets -->
	        <buttonlist name="sites" from="buttonlist_settings_details">
			     <area>-33,120,1400,576</area>
			     <buttonarea>0,0,1400,576</buttonarea>
	        </buttonlist>

	        <textarea name="help" from="textarea_settings_button">
	            <area>20,770,1375,32</area>
	        </textarea>

           <imagetype name="backgroundgridline10">
               <area>-20,760,1380,50</area>
               <preserveaspect>no</preserveaspect>
               <filename>images/shared/settings_radiobuttonoff.png</filename>
           </imagetype>

	        <textarea name="context_switch" from="textarea_plot">
	            <area>20,820,1315,116</area>
	            <case>normal</case>
	            <align>top,justify</align>
	            <multiline>yes</multiline>
	        </textarea>
        	
        </group>
        
        <group name="config_menu">
           <area>29,28,324,952</area>

	        <textarea name="titlemenu" from="textarea_settings_title">
	            <area>30,50,284,50</area>
	            <value>News catagories</value>
	        </textarea>
	
	        <textarea name="title" from="textarea_settings_title">
	            <area>30,50,284,50</area>
               <alpha>0</alpha>	            
	        </textarea>
	
	        <buttonlist name="category" from="buttonlist_settings_menu">
			       <area>0,120,324,720</area>
			       <buttonarea>0,0,324,720</buttonarea>
	        </buttonlist>
	
        </group>

	     <animation trigger="AboutToHide">
	        <section duration="1000" centre="middle">
	            <alpha start="255" end="0" easingcurve="InQuad" />
	        </section>
	     </animation>
